# Database Configuration
DATABASE_URL=mongodb://localhost:27017/ayar-care

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:4000

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console

# Weather API Configuration
# Get your API key from https://www.weatherapi.com/
WEATHER_API_KEY=your-weather-api-key-here

# Machine Learning Model Configuration
MODEL_PATH=./models/plant_disease_model
MODEL_VERSION=1.0.0

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOADS_DIR=./uploads

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@ayar-care.com

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:4000
CORS_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_WEATHER_ALERTS=true
ENABLE_FORUM=true
ENABLE_PLANT_COLLECTION=true
ENABLE_PLANT_CARE_GUIDES=true
ENABLE_DEBUG_ENDPOINTS=true

# Third-party Services
# Plant identification service (optional)
PLANT_ID_API_KEY=your-plant-id-api-key

# Image optimization service (optional)
IMAGE_CDN_URL=https://your-cdn-domain.com

# Analytics (optional)
ANALYTICS_API_KEY=your-analytics-key

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Database
MONGODB_URI=mongodb://localhost:27017/ayar-care

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Session Secret
SESSION_SECRET=your-session-secret-here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Server Port
PORT=5000

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Weather API (if using)
WEATHER_API_KEY=your-weather-api-key

# Environment
NODE_ENV=development
